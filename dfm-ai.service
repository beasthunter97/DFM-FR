[Unit]
Description=DFM AI Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=mendel
WorkingDirectory=/home/mendel/coral/DFM_FR/
ExecStart=/bin/bash /home/mendel/coral/DFM_FR/boot_script.sh
Restart=on-failure
RestartSec=1

[Install]
